{
  "name": "commentwizard",
  "displayName": "Comment Wizard",
  "description": "Generate smart AI-powered comments for your code using Google Gemini.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "icon": "media/image.png",
  "contributes": {
    "commands": [
      {
        "command": "commentwizard.generateComment",
        "title": "Comment Wizard: Generate Comment"
      }
    ],
    "keybindings": [
      {
        "command": "commentwizard.generateComment",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Comment Wizard",
      "properties": {
        "commentwizard.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Gemini API key for generating comments"
        }
      }
    }
  },
  "main": "./extension.js"
}
